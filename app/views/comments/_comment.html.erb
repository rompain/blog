 <div class="media-body">
        <h4 class="media-heading"><%= comment.name %>
          <% if current_user.try(:admin?) || (comment.user == current_user && !current_user.nil?) %>
              <%= current_user.try(:admin?) %>
              <%= link_to 'Delete comment', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn pull-right", role: "button" %>
          <% end %>
          <small><%=  time_ago_in_words(comment.created_at)%> ago</small>
        </h4>
        <%= comment.body %>
        <hr>
 </div>