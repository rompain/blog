<div class="row">

  <!-- Blog Post Content Column -->
  <div class="col-lg-8">

    <!-- Blog Post -->

    <!-- Title -->
    <h1><%= @post.title %></h1>

    <!-- Author -->
    <p class="lead">
      by <a href="#">Start Bootstrap</a>
    </p>

    <hr>

    <!-- Date/Time -->
    <p><span class="glyphicon glyphicon-time"></span> Posted on <%= @post.created_at.strftime("%B %d, %Y at %H:%M") %></p>
    <%= link_to 'Edit', edit_post_path(@post) %>

    <hr>

    <!-- Preview Image -->
    <img class="img-responsive" src="http://placehold.it/400x100" alt="">

    <hr>

    <!-- Post Content -->
    <p class="lead"><%= @post.body %></p>

    <hr>

    <h3><%= pluralize @post.comments.count, "comment" %></h3>
    <div class="media"><%= render @post.comments %></div>

    <!-- Comments Form -->
    <div class="well">
      <h4>Leave a Comment:</h4>
      <%= form_for([@post, @post.comments.build]) do |f| %>
          <form role="form">
            <div class="form-group">
              <%= f.text_field :name, class: "form-control", placeholder: "Name"%>
              <%= f.text_area :body, class: "form-control", rows:"2", placeholder: "Comment"%>
            </div>
            <%= f.submit type: "submit", class: "btn btn-default"%>
          </form>
      <% end %>
    </div>

  </div>

  <%= render 'layouts/sidebar' %>

</div>
<!-- /.row -->
<%= link_to 'Back', posts_path %>

