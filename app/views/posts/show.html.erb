<div class="row">

  <!-- Blog Post Content Column -->
  <div class="col-lg-8">

    <%= render @post, trunk: false %>

    <h3><%= pluralize @post.comments.count, "comment" %></h3>
    <div class="media"><%= render @post.comments %></div>

    <!-- Comments Form -->
    <div class="well">
      <h4>Leave a Comment:</h4>
      <%= form_for([@post, @post.comments.build]) do |f| %>
          <form role="form">
            <div class="form-group">
              <%= f.text_area :body, class: "form-control", rows:"2"%>
            </div>
            <%= f.submit type: "submit", class: "btn btn-default"%>
          </form>
      <% end %>
    </div>

  </div>

  <%= render 'shared/sidebar' %>

</div>
<!-- /.row -->

