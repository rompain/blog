<h1>All Posts</h1>

<% @posts.each do |post| %>
    <p>
    <strong><%= link_to post.title, post %></strong><br>
    <%= post.body %><br>
      <%= post.created_at.strftime("%d %B %Y %H:%M")%><br>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
<% end %>

<%= link_to 'New Post', new_post_path %>
